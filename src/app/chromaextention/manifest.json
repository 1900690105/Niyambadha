{
  "manifest_version": 3,
  "name": "Niyambadha â€“ Block Distractions & Build Focus",
  "short_name": "Niyambadha",
  "description": "Blocks distracting websites and redirects users to focus-building puzzles.",
  "version": "1.0.0",
  "version_name": "1.0.0 Stable",
  "author": "Niyambadha Team",
  "permissions": ["tabs", "scripting", "activeTab","storage"],
  "host_permissions": [
    "https://niyambadha.vercel.app/*",
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://niyambadha.vercel.app/*", "http://localhost:3000/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Niyambadha",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
   
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "100",
  "offline_enabled": true
}
